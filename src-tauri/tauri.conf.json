{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Verify Me",
  "version": "0.1.0",
  "identifier": "com.niche-knack.verify-me",
  "build": {
    "beforeDevCommand": "npm run dev:vite",
    "devUrl": "http://localhost:5184",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Verify Me",
        "width": 900,
        "height": 860,
        "minWidth": 700,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self'; img-src 'self' asset: blob: data:; media-src 'self' blob:; connect-src 'self' ipc: http://ipc.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$APPDATA/models/**", "$APPDATA/output/**", "$RESOURCE/**"]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "rpm"],
    "icon": [
      "icons/icon.png"
    ],
    "resources": {
      "resources/models/pocket-tts/*": "models/pocket-tts/",
      "resources/models/pocket-tts/embeddings_v2/*": "models/pocket-tts/embeddings_v2/",
      "../engine/*.py": "engine/",
      "../engine/models/*.py": "engine/models/"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  },
  "plugins": {}
}
